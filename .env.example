# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/data_asset_db?schema=public"

# JWT Security (REQUIRED - Generate a strong secret key)
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secure_jwt_secret_key_must_be_long_and_random_at_least_32_chars
JWT_EXPIRES_IN=24h

# App
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# SSO Configuration
SSO_STATE_SECRET=your-secure-random-secret-key-for-oauth-state-signing
OAUTH_USER_INFO_URL=https://your-oauth-provider.com/userinfo
SAML_ENTRY_POINT=https://your-saml-idp.com/sso

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com